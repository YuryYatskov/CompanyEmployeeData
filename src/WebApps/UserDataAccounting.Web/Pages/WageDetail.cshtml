@page
@model UserDataAccounting.Web.Pages.WageDetailModel
@{
    ViewData["Title"] = "WageDetail";
}

<div class="container">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-page="/WageList">Wage</a></li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @if (Model.DepartmentId == 0)
        {
            <form asp-page-handler="AddWage" method="post" name="addWageForm" id="add_wage_form">
                <div class="form-group">
                    <label>Department:</label>
                    <select asp-items="Model.Departments" asp-for="DepartmentId" class="form-select" id="departmentId" name="departmentId"></select>
                </div>
                <div class="form-group">
                    <label>Job:</label>

                    <select asp-items="Model.Jobs" asp-for="JobId" class="form-select" id="jobId" name="jobId"></select>
                </div>
                <div class="form-group">
                    <label>Employee:</label>
                    <select asp-items="Model.Employees" asp-for="EmployeeId" class="form-select" id="employeeId" name="employeeId"></select>
                </div>
                <div class="form-group">
                    <label>Date of work:</label>
                    <input asp-for="DateOfWork" type="text" class="form-control" id="dateOfWork" name="dateOfWork">
                </div>
                <div class="form-group">
                    <label>Salary:</label>
                    <input asp-for="Salary" type="text" class="form-control" id="salary" name="salary">
                </div>

                <div class="form-control-plaintext">
                    <button type="submit" class="btn btn-success btn-block">Save</button>
                    <button asp-page-handler="CancelWage" class="btn btn-success btn-block">Cancel</button>
                </div>
            </form>
        }
        else
        {
            <form asp-page-handler="UpdateWage" method="post" name="updateWageForm" id="update_wage_form">
                <div class="form-group">
                    <label>Department:</label>
                    <input asp-for="DepartmentName" type="text" class="form-control" id="departmentName" name="departmentName" readonly>
                    <input asp-for="DepartmentId" type="text" class="form-control" id="departmentId" name="departmentId" readonly hidden>
                </div>
                <div class="form-group">
                    <label>Job:</label>
                    <input asp-for="JobName" type="text" class="form-control" id="jobName" name="jobName" readonly>
                    <input asp-for="JobId" type="text" class="form-control" id="jobId" name="jobId" readonly hidden>
                </div>
                <div class="form-group">
                    <label>Employee:</label>
                    <input asp-for="EmployeeName" type="text" class="form-control" id="employeeName" name="employeeName" readonly>
                    <input asp-for="EmployeeId" type="text" class="form-control" id="employeeId" name="employeeId" readonly hidden>
                </div>
                <div class="form-group">
                    <label>Date of work:</label>
                    <input asp-for="DateOfWork" type="text" class="form-control" id="dateOfWork" name="dateOfWork" readonly>
                </div>
                <div class="form-group">
                    <label>Salary:</label>
                    <input asp-for="Salary" type="text" class="form-control" id="salary" name="salary">
                </div>

                <div class="form-control-plaintext">
                    <button type="submit" class="btn btn-success btn-block">Save</button>
                    <button asp-page-handler="CancelWage" class="btn btn-success btn-block">Cancel</button>
                </div>
            </form>
        }
    </div>
</div>
